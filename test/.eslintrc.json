{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "strict": 0
  },
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "use": true
  }
}